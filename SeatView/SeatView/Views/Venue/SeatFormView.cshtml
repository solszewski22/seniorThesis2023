@model SeatView.Models.SeatModel

@{
    ViewBag.Title = "SeatFormView";
}

<h2>SeatFormView</h2>

@using (Html.BeginForm("processSeatUpdate", "Venue", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Section</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.section, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Row</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.row, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Seat Number</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.seatNum, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Upload Image</label>
        <div class="col-sm-10">
            <input type="file" name="imageFileName" />
        </div>
    </div>

    @*<div class="row mb-3">
            <label class="col-sm-2 col-form-label">Media URL</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.media.mediaUrl, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>*@

    <input type="hidden" name="id" value=@Model.id />
    <input type="hidden" name="mediaID" value=@Model.mediaID />

    <button type="submit" class="btn btn-primary">Save</button>
}

<div>
    @Html.ActionLink("Back to List", "displayLayoutInfo", "Venue")
    @*use a Session to transfer back*@
    @*@Html.ActionLink("Edit Layout", "editLayout", "Venue", new { id = Model.id, url = Model.layoutURL }, new { id = Model.id, url = Model.layoutURL })*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
