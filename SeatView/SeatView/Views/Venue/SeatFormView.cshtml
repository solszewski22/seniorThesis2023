@model SeatView.Models.SeatMediaModel

@{
    ViewBag.Title = "SeatFormView";
}

<h2>SeatFormView</h2>

@using (Html.BeginForm("processSeatRequest", "Venue", FormMethod.Post))
{
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Section</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.seat.section, new { htmlAttributes = new { @class = "form-control", required = "required" } })
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Row</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.seat.row, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Seat Number</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.seat.seatNum, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Media URL</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.media.mediaUrl, new { htmlAttributes = new { @class = "form-control", required = "required" } })
        </div>
    </div>

    <input  type="hidden" name="id" value=@Model.seat.id />
    
    <button type="submit" class="btn btn-primary">Save</button>
}

<div>
    @Html.ActionLink("Back to List", "displayLayoutInfo", "Venue")
    @*use a Session to transfer back*@
    @*@Html.ActionLink("Edit Layout", "editLayout", "Venue", new { id = Model.id, url = Model.layoutURL }, new { id = Model.id, url = Model.layoutURL })*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
