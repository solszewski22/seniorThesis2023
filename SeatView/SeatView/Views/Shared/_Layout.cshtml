<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Seat View</title>
    @Styles.Render("~/Content/bootstrap_1.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/styles.css")

</head>

@{
    var routeUrl = this.Url.RouteUrl(ViewContext.RouteData.Values);
    var area = routeUrl.Split('/')[1];
    var status = "Logout"; // better way to account for users as well
    if (area == "Home" | area == "" | area == "NewAccount")
    {
        status = "Login";
    }
}

<body id="@area">
    <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
        <div class="container-fluid">
            @Html.ActionLink("Seat View", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    @Html.ActionLink(status, "UserLogin", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    <style>
        #Home {
            background-color: #18BC9C;
        }
        #NewAccount {
            background-color: #18BC9C;
        }
    </style>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
