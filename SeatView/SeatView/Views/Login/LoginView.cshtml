@model SeatView.Models.OwnerModel
@{
    ViewBag.Title = "LoginView";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control", required = "required" } })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
}
